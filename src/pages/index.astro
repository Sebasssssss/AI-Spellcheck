---
import ButtonSubmit from '../components/ButtonSubmit.svelte';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Fix my english">
	<main class="container max-w-lg m-auto flex flex-col">
    <header class="py-4">
      <h1 class="text-3xl font-bold">Fix my english!</h1>
    </header>
      <label class="text-gray-700" for="message">
        <textarea id="result" placeholder="Write what you want to fix" name="comment" rows="4" cols="40" class="flex-1 w-full px-4 py-2 text-base text-gray-700 placeholder-gray-400 bg-white border border-gray-300 rounded-lg appearance-none focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent" />
      </label>
    <ButtonSubmit client:visible/>
  </main>
</Layout>
